                    <span class="n">textView</span><span class="o">.</span><span class="na">append</span><span class="o">(</span><span class="s">"[view2] ì†ê°€ë½ ë–¼ì§: "</span><span class="o">+</span><span class="n">curX</span><span class="o">+</span><span class="s">", "</span><span class="o">+</span><span class="n">curY</span><span class="o">+</span><span class="s">"\n"</span><span class="o">);</span>
                <span class="o">}</span>

                <span class="k">return</span> <span class="kc">true</span><span class="o">;</span>
            <span class="o">}</span>
        <span class="o">});</span>
    <span class="o">}</span>
<span class="o">}</span>
