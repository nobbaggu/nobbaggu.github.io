    <span class="o">}</span>

    <span class="kd">public</span> <span class="nc">Object</span> <span class="nf">getItem</span><span class="o">(</span><span class="kt">int</span> <span class="n">position</span><span class="o">){</span> <span class="c1">// indexë¥¼ í†µí•´ ArrayListì˜ SingerItem ê°ì²´ ë°˜í™˜</span>
