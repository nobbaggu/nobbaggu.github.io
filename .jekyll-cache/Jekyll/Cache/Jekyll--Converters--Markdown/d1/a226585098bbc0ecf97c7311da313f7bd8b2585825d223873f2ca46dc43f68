        <span class="k">return</span> <span class="n">items</span><span class="o">.</span><span class="na">size</span><span class="o">();</span>
    <span class="o">}</span>

    <span class="kd">public</span> <span class="kt">void</span> <span class="nf">addItem</span><span class="o">(</span><span class="nc">PersonItem</span> <span class="n">item</span><span class="o">){</span> <span class="c1">//ArrayListì— ìƒˆë¡œìš´ SingerItem ê°ì²´ ì¶”ê°€í•˜ëŠ” ë©”ì†Œë“œ</span>
